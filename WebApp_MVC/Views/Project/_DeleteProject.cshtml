@model int

<div class="delete-dialogue" id="delete-project-dialogue">
    <h4>Are you sure?</h4>
    <p>Do you really want to delete this project?</p>
    <p>This action cannot be undone.</p>
    <div class="horizontal">
        <button type="button" class="btn btn-cancel-delete" data-close="true">Cancel</button>
        <form method="post" asp-controller="Project" asp-action="DeleteProject" class="delete-project-form no-validation">
            <input type="hidden" name="id" class="deleteProjectId" value="@Model" />
            <button type="submit" class="btn btn-confirm-delete">Delete</button>
        </form>
    </div>
</div>
