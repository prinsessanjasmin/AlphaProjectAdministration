@using Data.Entities
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha</title>
    <script type="importmap"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="~/js/search.js" asp-append-version="true"></script>
    <script src="~/js/freetextsearch.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/584828937d.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" defer></script>
    <script src="~/js/signalr.js" defer></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp_MVC.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
</head>
<body data-controller="@ViewContext.RouteData.Values["controller"]" data-action="@ViewContext.RouteData.Values["action"]">
    <section class="page-projects">
        <div class="wrapper">          
            @await Html.PartialAsync("Partials/Components/_Header")           
            @await Html.PartialAsync("Partials/Components/_Sidebar")        
            @await Html.PartialAsync("Partials/Components/_Topbar")
            <main class="main-view">
                @RenderBody()
            </main>
            @await Html.PartialAsync("Partials/Components/_Footer")
        </div>
        <partial name="Partials/Components/_CookieConsentPartial" />
    </section>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cookie-consent.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
