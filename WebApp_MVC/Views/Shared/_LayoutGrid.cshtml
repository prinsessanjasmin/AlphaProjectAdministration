<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/SCSS/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp_MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="page-projects">
        <div class="wrapper">          
            @await Html.PartialAsync("Partials/Components/_Header")           
            @await Html.PartialAsync("Partials/Components/_Sidebar")        
            @await Html.PartialAsync("Partials/Components/_Topbar")
            <main class="main-view">
                @RenderBody()
            </main>
            @await Html.PartialAsync("Partials/Components/_Footer")
        </div>
    </section>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
