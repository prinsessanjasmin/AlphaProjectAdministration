@model ClientViewModel
@{
    ViewData["Title"] = "Clients";
}
@{
    var addClientViewModel = ViewData["AddClientViewModel"] as AddClientViewModel;
    var editClientViewModel = ViewData["EditClientViewModel"] as EditClientViewModel;
}



<partial name="_AddClient" model="addClientViewModel" />
<div id="delete-client-modal" class="modal">
    <div class="modal-content confirm-delete-modal"></div>
</div>
<div id="editClientModal" class="modal">
    <div class="modal-content add-client-container"></div>
</div>
<div class="projects-container">
    <div class="side-by-side">
        <h2>Clients</h2>
        <button class="btn btn-add-new" data-modal="true" data-target="#addClientModal" asp-controller="Client" asp-action="AddClient">Add Client</button>
    </div>

    <div class="project-view">
        @if (!Model.Clients.Any())
        {
            <h4>There are no clients to show.</h4>
        }
        else
        {
            @foreach (ClientEntity client in Model.Clients)
            {
                @await Html.PartialAsync("_ClientCard", client)
            }
        }
    </div>
</div>
