@model int

<div class="delete-dialogue" id="delete-client-dialogue">
    <h4>Are you sure?</h4>
    <p>Do you really want to delete this client?</p>
    <p>This action cannot be undone.</p>
    <div class="horizontal">
        <button type="button" class="btn btn-cancel-delete" data-close="true">Cancel</button>
        <form method="post" asp-controller="Client" asp-action="DeleteClient">
            <input type="hidden" name="id" class="deleteClientId" value="@Model" />
            <button type="submit" class="btn btn-confirm-delete">Delete</button>
        </form>
    </div>
</div>
